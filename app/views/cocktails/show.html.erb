
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo, crop: :fill unless @cocktail.photo.blank? %>');">
    <div class="container show-banner-text">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Back to Cocktail List", root_path, class: "btn btn-info" %>
    </div>
  </div>
<div class="container cocktail-show">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h4>Recipe</h4>
      <table class="table">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "form", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>
