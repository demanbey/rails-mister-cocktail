<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Cocktails!</h1>
    <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container cocktails">
  <% @cocktail.each do |cocktail| %>
    <div class="col-xs-12">
      <div class="cards">
        <div class="card-category wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <div><h2><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h2></div>
        </div>
      </div>
    </div>
  <% end %>
</div>



